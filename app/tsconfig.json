{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "jsx": "react-native",
    "baseUrl": "./src",
    "paths": {
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@screens/*": ["screens/*"],
      "@helpers/*": ["helpers/*"],
      "@components/*": ["comps/*"],
      "@services/*": ["services/*"],
      "@navigation/*": ["navigation/*"]
    }
  }
}
